@model ResultSpecialByIdDto
@{
    ViewData["Title"] = "UpdateSpecial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Spesyel güncelleme sayfası</h4>
            <small class="card-description ">
                Bu alanda spesyel güncelleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <input type="hidden" asp-for="SpecialId" class="form-control" />
                <label>Spesyel Adı</label>
                <input type="text" asp-for="SpecialName" class="form-control" />
                <br />
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control" />
                <br />
                <label>Görsel </label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <button class="btn btn-outline-primary">Güncelle</button>
            </form>

        </div>
    </div>
</div>









