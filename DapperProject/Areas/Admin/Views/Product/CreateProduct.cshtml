@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni ürün ekleme sayfası</h4>
            <small class="card-description ">
                Bu alanda yeni ürün ekleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <label>Resim</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <label>Ürün Adı</label>
                <input type="text" asp-for="ProductName" class="form-control" />
                <br />
                <label>Ürün Fiyat</label>
                <input type="text" asp-for="ProductPrice" class="form-control" />
                <br />
                <label>Kategori</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.SelectListItem"> </select>
                <br />
                <label>Açıklama</label>
                <textarea type="text" asp-for="Description" rows="5" class="form-control"></textarea>
                <br />
                <button class="btn btn-outline-primary">Kaydet</button>
            </form>

        </div>
    </div>
</div>



