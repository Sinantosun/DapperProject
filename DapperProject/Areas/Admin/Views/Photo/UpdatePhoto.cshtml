@model ResultPhotoByIdDto
@{
    ViewData["Title"] = "UpdatePhoto";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni fotoğraf ekleme sayfası</h4>
            <small class="card-description ">
                Bu alanda yeni fotoğraf ekleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <input type="hidden" asp-for="PhotoId" class="form-control" />
                <label>Görsel</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <button class="btn btn-outline-primary">Güncelle</button>
            </form>

        </div>
    </div>
</div>







