@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Dashboard</h4>

        <div class="row row-card-no-pd mt-2">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <p class="fw-bold mt-1">En Pahalı Yemek</p>
                        <h4><b>25 ₺</b></h4>
                        <span class="btn btn-primary btn-full text-left mt-3 mb-3">Yaprak Sarma</span>
                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="card card-stats">
                    <div class="card-body">
                        <p class="fw-bold mt-1">Fiyat İstatistikleri</p>
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center icon-warning">
                                    <i class="la la-pie-chart text-warning"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Ortalama Fiyat</p>
                                    <h4 class="card-title">150GB</h4>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-heart-o text-primary"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">En Pahlı Fiyat</p>
                                    <h4 class="card-title">+45K</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header ">
                        <h4 class="card-title">Rezervasyonlar</h4>
                        <p class="card-category">Son 5 Rezervasyon</p>
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">First</th>
                                    <th scope="col">Last</th>
                                    <th scope="col">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>mdo</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                    <td>fat</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td colspan="2">Larry the Bird</td>
                                    <td>twitter</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-tasks">
                    <div class="card-header ">
                        <h4 class="card-title">Yapılacaklar Listesi (Ajax)</h4>
                    </div>
                    <div class="card-body ">
                        <div class="table-full-width">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input  select-all-checkbox" type="checkbox" data-select="checkbox" data-target=".task-select">
                                                    <span class="form-check-sign"></span>
                                                </label>
                                            </div>
                                        </th>
                                        <th>Başlık</th>
                                        <th>Durum</th>
                                        <th colspan="3" class="text-center">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input task-select" type="checkbox">
                                                    <span class="form-check-sign"></span>
                                                </label>
                                            </div>
                                        </td>
                                        <td>Stoklar Kontrol Edilecek</td>
                                        <td><span class="badge badge-danger">Tamamlanmadı</span></td>
                                        <td class="td-actions text-center">
                                            <button type="button" data-toggle="tooltip" title="Tamamlandı Olarak İşaretle" class="btn btn-link btn-simple-success">
                                                <i class="la la-thumbs-up"></i>
                                            </button>
                                            <button type="button" data-toggle="tooltip" title="Güncelle" class="btn btn-link <btn-simple-primary">
                                                <i class="la la-edit"></i>
                                            </button>
                                            <button type="button" data-toggle="tooltip" title="Sil" class="btn btn-link btn-simple-danger">
                                                <i class="la la-times"></i>
                                            </button>
                                           

                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer ">
                        <div class="stats">
                            <i class="now-ui-icons loader_refresh spin"></i> Son Güncelleme : 25 mayıs pazartesi 14.30
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

