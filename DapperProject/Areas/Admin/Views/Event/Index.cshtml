@model List<ResultEventDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Etkinlik Alanı</h4>
            <small class="card-description ">
                Etkinlik ekleme silme veya güncelleme işlemlerini buradan gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <td>Başlık</td>
                            <td>Üst Açıklama</td>
                            <td>1.Özellik</td>
                            <td>2.Özellik</td>
                            <td>3.Özellik</td>
                            <td colspan="2">İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.EventId</th>
                                <td>@item.Title</td>
                                <td>@item.TopDescription</td>
                                <td>@item.Property1</td>
                                <td>@item.Property2</td>
                                <td>@item.Property3</td>

                                <td><a href="/Admin/Event/DeleteEvent/@item.EventId" class="btn btn-outline-danger"><i class="la la-trash"></i> Sil</a></td>
                                <td><a href="/Admin/Event/UpdateEvent/@item.EventId" class="btn btn-outline-success"><i class="la la-edit"></i> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Event/CreateEvent" class="btn btn-outline-primary"><i class="la la-pencil"></i> Yeni etkinlik ekle</a>
            </div>
        </div>
    </div>
</div>



