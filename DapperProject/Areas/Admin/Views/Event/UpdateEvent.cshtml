@model ResultEventByIdDto
@{
    ViewData["Title"] = "UpdateEvent";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Etkinlik güncelleme sayfası</h4>
            <small class="card-description ">
                Bu alanda etkinlik güncelleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <input type="hidden" asp-for="EventId" class="form-control" />
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <label>Üst Açıklama</label>
                <input type="text" asp-for="TopDescription" class="form-control" />
                <br />
                <label>Özellik 1</label>
                <input type="text" asp-for="Property1" class="form-control" />
                <br />
                <label>Özellik 2</label>
                <input type="text" asp-for="Property2" class="form-control" />
                <br />
                <label>Özellik 3</label>
                <input type="text" asp-for="Property3" class="form-control" />
                <br />
                <label>Fiyat</label>
                <input type="text" asp-for="Price" class="form-control" />
                <br />
                <label>Alt Açıklama</label>
                <input type="text" asp-for="BottomDescription" class="form-control" />
                <br />
                <label>Görsel</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <button class="btn btn-outline-primary">Güncelle</button>
            </form>

        </div>
    </div>
</div>








