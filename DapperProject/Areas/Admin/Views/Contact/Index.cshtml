@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Alanı</h4>
            <small class="card-description ">
                İletişim ekleme silme veya güncelleme işlemlerini buradan gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <td>Adres</td>
                            <td>Açık Saatler</td>
                            <td>Email</td>
                            <td>Telefon</td>
                            <td colspan="2">İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.ContactId</th>
                                <td>@item.Location</td>
                                <td>@item.OpenHours</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>

                                <td><a href="/Admin/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger"><i class="la la-trash"></i> Sil</a></td>
                                <td><a href="/Admin/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success"><i class="la la-edit"></i> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Contact/CreateContact" class="btn btn-outline-primary"><i class="la la-pencil"></i> Yeni hakkımızda ekle</a>
            </div>
        </div>
    </div>
</div>



