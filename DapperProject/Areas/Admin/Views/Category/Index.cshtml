
@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategoriler</h1>



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <td>Kategori Adı</td>
        <td colspan="2">İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a></td>
            <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success"><i class="fa fa-edit"></i> Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Category/CreateCategory" class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Yeni kategori ekle</a>

