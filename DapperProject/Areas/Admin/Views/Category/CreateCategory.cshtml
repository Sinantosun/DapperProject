@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni ürün ekleme sayfası</h4>
            <small class="card-description ">
                Bu alanda yeni kategori ekleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <label>Kategori adı</label>
                <input type="text" asp-for="CategoryName" class="form-control" />
                <br />
                <button class="btn btn-outline-primary">Güncelle</button>
            </form>

        </div>
    </div>
</div>




