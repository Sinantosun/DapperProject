@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni rezervasyon ekleme sayfası</h4>
            <small class="card-description ">
                Bu alanda yeni rezervasyon ekleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <label>Ad Soyad</label>
                <input type="text" asp-for="Name" class="form-control" />
                <br />
                <label>E Posta</label>
                <input type="text" asp-for="Email" class="form-control" />
                <br />
                <label>Telefon Numarası</label>
                <input type="text" asp-for="Phone" class="form-control" />
                <br />
                <label>Tarih </label>
                <input type="datetime-local" asp-for="Date" class="form-control" />
                <br />
                <label>Kişi Sayısı</label>
                <input type="text" asp-for="PersonCount" class="form-control" />
                <br />
                <label>Ek Açıklama</label>
                <input type="text" asp-for="MessageContent" class="form-control" />
                <br />
                <button class="btn btn-outline-primary">Ekle</button>
            </form>

        </div>
    </div>
</div>







