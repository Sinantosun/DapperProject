@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rezervasyonlar Alanı</h4>
            <small class="card-description ">
                Rezervasyon ekleme silme veya güncelleme işlemlerini buradan gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <td>Ad Soyad</td>
                            <td>Email</td>
                            <td>Tarih</td>
                            <td>Kişi Sayısı</td>
                            <td>Ek Açıklama</td>
                            <td colspan="2">İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.ReservationId</th>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Date</td>
                                <td>@item.PersonCount</td>
                                <td>@item.MessageContent</td>

                                <td><a href="/Admin/Booking/DeleteBooking/@item.ReservationId" class="btn btn-outline-danger"><i class="la la-trash"></i> Sil</a></td>
                                <td><a href="/Admin/Booking/UpdateBooking/@item.ReservationId" class="btn btn-outline-success"><i class="la la-edit"></i> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Booking/CreateBooking" class="btn btn-outline-primary"><i class="la la-pencil"></i> Yeni rezervasyon ekle</a>
            </div>
        </div>
    </div>
</div>



