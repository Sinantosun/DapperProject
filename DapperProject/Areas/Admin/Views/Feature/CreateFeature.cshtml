@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni öne çıkan ekleme sayfası</h4>
            <small class="card-description ">
                Bu alanda yeni öne çıkan ekleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control" />
                <br />
                <label>Görsel</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <label>Video Iframe</label>
                <input type="text" asp-for="IframeUrl" class="form-control" />
                <br />
                <br />
                <button class="btn btn-outline-primary">Ekle</button>
            </form>

        </div>
    </div>
</div>







