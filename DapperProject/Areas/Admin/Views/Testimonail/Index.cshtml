@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Alanı</h4>
            <small class="card-description ">
                Referans ekleme silme veya güncelleme işlemlerini buradan gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <td>Görsel</td>
                            <td>Ad Soyad</td>
                            <td>Lokasyon</td>
                            <td colspan="2">İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.TestimonialId</th>
                                <td>@item.ImageUrl</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Location</td>

                                <td><a href="/Admin/Testimonail/DeleteTestimonail/@item.TestimonialId" class="btn btn-outline-danger"><i class="la la-trash"></i> Sil</a></td>
                                <td><a href="/Admin/Testimonail/UpdateTestimonail/@item.TestimonialId" class="btn btn-outline-success"><i class="la la-edit"></i> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Testimonail/CreateTestimonail" class="btn btn-outline-primary"><i class="la la-pencil"></i> Yeni referans ekle</a>
            </div>
        </div>
    </div>
</div>



