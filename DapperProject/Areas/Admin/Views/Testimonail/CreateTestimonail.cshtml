@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni hakkımızda ekleme sayfası</h4>
            <small class="card-description ">
                Bu alanda yeni hakkımızda ekleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <label>Görsel</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />
                <label>Ad Soyad</label>
                <input type="text" asp-for="NameSurname" class="form-control" />
                <br />
                <label>Lokasyon</label>
                <input type="text" asp-for="Location" class="form-control" />
                <br />
                <label>Yorum</label>
                <input type="text" asp-for="Comment" class="form-control" />
                <br />
                <button class="btn btn-outline-primary">Ekle</button>
            </form>

        </div>
    </div>
</div>





