@model CreateWhyUsDto
@{
    ViewData["Title"] = "CreateWhyUs";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<br />
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni hakkımızda ekleme sayfası</h4>
            <small class="card-description ">
                Bu alanda yeni hakkımızda ekleme işlemi gerçekleştirebilirsiniz.
            </small>
            <br />
            <br />
            <form method="post">
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control" />

                <br />
                <button class="btn btn-outline-primary">Ekle</button>
            </form>

        </div>
    </div>
</div>






