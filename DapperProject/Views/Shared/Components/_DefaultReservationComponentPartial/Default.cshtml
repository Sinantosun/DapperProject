@model CreateBookingDto
<section id="book-a-table" class="book-a-table">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Reservasyon</h2>
            <p>Restoran Rezerasyonunuzu Yapın</p>
        </div>

        <form  method="post" asp-action="AddBooking" asp-controller="Default" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-4 col-md-6 form-group">
                    <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Ad Soyad">
                   
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Email">
      
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input type="text" class="form-control" asp-for="Phone" id="phone" placeholder="Telefon">
                 
                </div>
                <div class="col-lg-8 col-md-6 form-group mt-3">
                    <input type="datetime-local" asp-for="Date" class="form-control" id="date">
          
                </div>
              
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input type="number" class="form-control" asp-for="PersonCount" id="people" placeholder="# Kişi Sayısı">
           
                </div>

                <div class="col-lg-12 col-md-6 form-group mt-3">
                    <textarea type="number" class="form-control" rows="5" asp-for="MessageContent"  placeholder="Mesajınız"></textarea>
              
                </div>
            </div>
            <br />
            <div class="text-center"><button type="submit" class="btn btn-dark">Rezervasyon Yap</button></div>
        </form>

    </div>
</section>