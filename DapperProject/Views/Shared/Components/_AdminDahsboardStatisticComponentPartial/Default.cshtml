
@model ResultDashboardStatisticDto

<div class="row row-card-no-pd mt-2">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <p class="fw-bold mt-1">En Pahalı Yemek</p>
                <h4><b>@Model.ExpensiveProductPrice.ToString("C2")</b></h4>
                <span class="btn btn-primary btn-full text-left mt-3 mb-3">@Model.ExpensiveProductName</span>
            </div>

        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-stats">
            <div class="card-body">
                <p class="fw-bold mt-1">Fiyat İstatistikleri</p>
                <div class="row">
                    <div class="col-5">
                        <div class="icon-big text-center icon-warning">
                            <i class="la la-pie-chart text-warning"></i>
                        </div>
                    </div>
                    <div class="col-7 d-flex align-items-center">
                        <div class="numbers">
                            <p class="card-category">Ortalama Fiyat (Ürün Sayısı : @Model.ProductCount)</p>
                            <h4 class="card-title">@Model.ProductAvgPrice.ToString("C2")</h4>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-5">
                        <div class="icon-big text-center">
                            <i class="la la-heart-o text-primary"></i>
                        </div>
                    </div>
                    <div class="col-7 d-flex align-items-center">
                        <div class="numbers">
                            <p class="card-category">En Uygun Fiyat</p>
                            <h4 class="card-title">@Model.CheeperProductPrice.ToString("C2")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>