@model List<ResultProductDto>
@{
    int count = 0;
}
<section id="menu" class="menu section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Menümüz</h2>
            <p>Restoran Lezzetlerimiz İle Tanışın</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="menu-flters">
                    @foreach (var item in ViewBag.Categories as List<ResultCategoryDto>)
                    {
                        count++;
                        if (count==1)
                        {
                            <li data-filter="*" class="filter-active">Hepsi</li>
                        }
                       
                        <li data-filter=".filter-@(item.CategoryName=="Ana Yemek"?"AnaYemek":item.CategoryName)" class="filter-active">@item.CategoryName</li>
                    }
                  
                </ul>
            </div>
        </div>

        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var item in Model)
            {
                if (item.CategoryName == "Ana Yemek")
                {
                    item.CategoryName = "AnaYemek";
                }
                <div class="col-lg-6 menu-item filter-@item.CategoryName">
                    <img src="@item.ImageUrl" style="width:100px; height:100px; object-fit:cover"  class="menu-img" alt="">
                    <div class="menu-content">
                        <a href="#" style="margin-left:10px">@item.ProductName</a><span>@item.ProductPrice.ToString("C2")</span>
                    </div>
                    <div class="menu-ingredients " style="margin-left:110px">
                        <span > @item.Description</span>
                    </div>
                </div>
            }
        

        </div>

    </div>
</section>